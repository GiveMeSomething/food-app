<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/sofiapro_light</item>
    </style>

    <style name="EditextFoodApp" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingHorizontal">@dimen/_15sdp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edt</item>
        <item name="android:paddingVertical">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="EditText.Layout" parent="Widget.Design.TextInputLayout">
        <item name="endIconMode">none</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="hintEnabled">false</item>
        <item name="endIconTint">@null</item>
    </style>

    <style name="Button.Normal" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginHorizontal">@dimen/_35sdp</item>
        <item name="android:layout_marginVertical">@dimen/_25sdp</item>
        <item name="android:paddingVertical">@dimen/_13sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:background">@drawable/bg_button_normal</item>
    </style>

</resources>